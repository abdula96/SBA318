<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add New Recipe</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="container">
      <header>
        <h1>Add New Recipe</h1>
      </header>

      <form action="/add" method="POST" class="recipe-form">
        <ul>
          <!-- Recipe Name -->
          <li>
            <label for="recipeName">Recipe Name:</label>
            <input type="text" id="recipeName" name="recipeName" required />
          </li>

          <!-- Ingredients -->
          <li>
            <label for="ingredients">Ingredients:</label>
            <textarea
              id="ingredients"
              name="ingredients"
              rows="4"
              required
            ></textarea>
          </li>

          <!-- Instructions -->
          <li>
            <label for="instructions">Instructions:</label>
            <textarea
              id="instructions"
              name="instructions"
              rows="4"
              required
            ></textarea>
          </li>

          <!-- Submit Button -->
          <li>
            <button type="submit" class="btn">Add Recipe</button>
          </li>
        </ul>
      </form>

      <a href="/" class="btn">Back to Recipe Book</a>
    </div>
  </body>
</html>
